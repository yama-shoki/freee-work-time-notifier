{
  "manifest_version": 3,
  "name": "freee退勤通知",
  "version": "1.0.0",
  "description": "freee勤怠管理で8時間勤務完了の10分前・1分前に通知",
  "permissions": ["notifications", "storage", "alarms", "activeTab"],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://p.secure.freee.co.jp/*"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "freee退勤通知設定"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
